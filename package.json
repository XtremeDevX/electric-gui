{
  "build": {
    "appId": "sh.electric.gui",
    "files": [
      "!*",
      "dist/**/*"
    ]
  },
  "name": "electric-gui",
  "version": "1.0.0",
  "description": "Electric's package manager GUI",
  "main": "dist/main.bundle.js",
  "repository": "https://github.com/electric-package-manager/electric-gui.git",
  "author": "dragonDScript <agomila96@gmail.com>",
  "license": "Apache-2.0",
  "dependencies": {
    "electron": "^12.0.2",
    "electron-builder": "^22.10.5",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "esbuild": "^0.11.4",
    "eslint": "^7.23.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.23.1"
  },
  "scripts": {
    "dev": "yarn build-main && yarn build-frontend --watch & electron .",
    "prod": "yarn build-main && yarn build-frontend && build-electron",
    "build-main": "esbuild src/main/main.ts --bundle --outfile=dist/main.bundle.js --platform=node",
    "build-frontend": "mkdir dist -p && cp src/frontend/index.html dist/ & esbuild src/frontend/main.tsx --bundle --outfile=dist/renderer.bundle.js",
    "build-electron": "electron-builder"
  }
}
